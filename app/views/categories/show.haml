= render partial:'shared/header'
.categories-show
  .children-menu
    -@child_categories.each do |category|
      =link_to(category.name,category_path(category))
  .item-box
    .item-box__title
      ="#{@category.name}の商品一覧"
    .item-box__list
      =render partial:'items/item-card',collection:@items,as: :item
    .clearfix
= render partial:'shared/footer'
